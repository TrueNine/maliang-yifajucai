# 监听域名 yifajucai.com - 自动HTTPS
yifajucai.com {
  # 启用gzip压缩
  encode gzip

  handle /api/* {
    uri strip_prefix /api
    reverse_proxy api:8080
  }

  handle /ressources_oss/* {
    uri strip_prefix /api
    reverse_proxy minio:9000
  }
  
  handle {
    root * /srv
    try_files {path} /index.html
    file_server
  }
}
